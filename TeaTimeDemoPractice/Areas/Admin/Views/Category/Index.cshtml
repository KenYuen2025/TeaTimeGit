@model List<Category>

@* <partial name="_Notification" /> *@

<div class="container">
    <div class="row pt-4 pb-3">
        <div class="col-6">
            <h2 class="text-primary">
                類別清單
            </h2>
        </div>
        <div class="col-6 text-end">
            <a asp-asp-controller="Category" asp-action="create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> 新增類別
            </a>
        </div>
    </div>

    <table class="table table-bordered table-striped">
        <thead>
            <tr>
                <th>類別名稱</th>
                <th>顯示順序</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var obj in Model.OrderBy(u => u.DisplayOrder))
            {
                <tr>
                    <td>@obj.name</td>
                    <td>@obj.DisplayOrder</td>
                    <td>
                        <div class="w-75 btn-group" role="group">
                            <a asp-asp-controller="Category" asp-action="Edit" asp-route-id="@obj.id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>編輯
                            </a>
                            <a asp-asp-controller="Category" asp-action="Delete" asp-route-id="@obj.id" class="btn btn-primary mx-2">
                                <i class="bi bi-pencil-square"></i>刪除
                            </a>
                        </div>
                    </td>
                </tr>
            }
        </tbody>
    </table>

</div>


